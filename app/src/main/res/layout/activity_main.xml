<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp">

    <TextView
        android:id="@+id/center"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Contabilidad de Ingresos/Egresos"
        android:textSize="24dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtahorro"
        android:layout_below="@+id/center"
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:paddingBottom="16dp"
        android:layout_height="wrap_content"
        android:text="Saldo Actual de Ahorro"/>

    <TextView
        android:id="@+id/ahorro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/center"
        android:layout_alignEnd="@+id/txtahorro"
        android:layout_alignRight="@+id/txtahorro"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="S/. 2000.00" />

    <TextView
        android:id="@+id/txtcredito"
        android:layout_below="@+id/txtahorro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="Saldo Actual CrÃ©dito"/>

    <TextView
        android:id="@+id/credito"
        android:layout_below="@+id/ahorro"
        android:layout_alignEnd="@+id/txtcredito"
        android:layout_width="wrap_content"
        android:text="S/. 500.00"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txtcredito" />

    <TextView
        android:id="@+id/txtefectivo"
        android:layout_below="@+id/txtcredito"
        android:layout_width="match_parent"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_height="wrap_content"
        android:text="Saldo Actual Efectivo"/>

    <TextView
        android:id="@+id/efectivo"
        android:layout_alignEnd="@+id/txtefectivo"
        android:layout_below="@+id/credito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_alignRight="@+id/txtefectivo"
        android:text="S/. 2500.00"/>

    <TextView
        android:id="@+id/name"
        android:layout_below="@+id/efectivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="Proporcion de Ingresos/Egresos"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_input_add"
        android:layout_alignParentEnd="true" />

</RelativeLayout>